  "engines": {
    "node": "16"
  },
  "main": "lib/src/index.js",
  "dependencies": {
    "firebase-admin": "^11.11.0",
    "firebase-functions": "^4.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "firebase-functions-test": "^3.1.0",
    "typescript": "^5.2.2"
  },
  "private": true
}
